<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">

    <!-- Basic Company  -->
        <record id="partner_USA" model="res.partner">
            <field name="name">Organo Gold USA</field>
            <field name="ref">US</field>
            <!-- Address and Company ID will be set later -->
            <field name="address" eval="[]"/>
            <field name="company_id" eval="None"/>
            <field name="customer" eval="False"/>
        </record>
        <record id="address_USA" model="res.partner.address">
            <field name="partner_id" ref="partner_USA"/>
            <field name="type">default</field>
            <field name="country_id" ref="base.us"/>
            <field name="company_id" eval="None"/>
        </record>

        <!-- Currencies -->
        <record id="USD_USA" model="res.currency">
            <field name="name">USD</field>
            <field name="symbol">$</field>
            <field name="rounding">0.01</field>
            <field name="accuracy">4</field>
            <!-- Company ID will be set later -->
            <field name="company_id" eval="None"/>
        </record>
        <record id="rateUSD_USA" model="res.currency.rate">
            <field name="rate">1.0</field>
            <field name="currency_id" ref="USD_USA"/>
            <field eval="time.strftime('%Y-01-01')" name="name"/>
        </record>

        <record id="company_USA" model="res.company">
            <field name="name">Organo Gold USA</field>
            <field name="partner_id" ref="partner_USA"/>
            <field name="rml_footer1"></field>
            <field name="rml_footer2"></field>
            <field name="currency_id" ref="USD_USA"/>
        </record>

        <record model="res.users" id="user_us">
            <field name="name">US Test</field>
            <field name="login">us</field>
            <field name="password">us</field>
            <field name="signature">US Test User</field>
            <field name="company_id" ref="company_USA"/>
            <field name="menu_id" ref="base.action_menu_admin"/>
            <field name="company_ids" eval="[(4, ref('company_USA'))]"/>
            <field name="groups_id" eval="[(6, 0, [ref('base.group_user'), ref('base.group_extended'), ref('base.group_partner_manager'), ref('base.group_sale_manager'), ref('stock.group_stock_manager'), ref('purchase.group_purchase_manager'), ref('base.group_multi_company'), ref('account.group_account_manager'), ref('base.group_system'), ref('base.group_hr_manager'), ref('mrp.group_mrp_manager')])]"/>
        </record>

        <record id="partner_USA" model="res.partner">
            <field name="company_id" ref="company_USA"/>
        </record>
        <record id="address_USA" model="res.partner.address">
            <field name="company_id" ref="company_USA"/>
        </record>
        <record id="USD_USA" model="res.currency">
            <field name="company_id" ref="company_USA"/>
        </record>

    <!--
        Resource: stock.location
    -->
        <record id="stock_location_Washington" model="stock.location">
            <field name="name">US Washington St.</field>
            <field name="usage">view</field>
            <field name="location_id" ref="stock.stock_location_locations"/>
            <field name="company_id" ref="company_USA"/>
        </record>

        <record id="stock_location_output_Washington" model="stock.location">
            <field name="name">Output</field>
            <field name="location_id" ref="stock_location_Washington"/>
            <field name="usage">internal</field>
            <field name="chained_location_type">customer</field>
            <field name="chained_auto_packing">transparent</field>
            <field name="chained_picking_type">out</field>
            <field name="chained_journal_id" ref="stock.journal_delivery"/>
            <field name="company_id" ref="company_USA"/>
        </record>
        <record id="stock_location_stock_Washington" model="stock.location">
            <field name="name">Stock</field>
            <field name="location_id" ref="stock_location_Washington"/>
            <field name="company_id" ref="company_USA"/>
        </record>
        <record id="stock_location_input_Washington" model="stock.location">
            <field name="name">Input</field>
            <field name="location_id" ref="stock_location_Washington"/>
            <field name="usage">internal</field>
            <field name="chained_location_type">fixed</field>
            <field name="chained_location_id" ref="stock_location_stock_Washington"/>
            <field name="chained_auto_packing">manual</field>
            <field name="chained_picking_type">internal</field>
            <!-- field name="chained_journal_id" ref="stock.journal_delivery"/ -->
            <field name="company_id" ref="company_USA"/>
        </record>
    <!--
        Resource: stock.warehouse
    -->
        <record id="warehouse0_Washington" model="stock.warehouse">
            <field name="name">US Washington St.</field>
            <field name="lot_input_id" ref="stock_location_input_Washington"/>
            <field name="lot_stock_id" ref="stock_location_stock_Washington"/>
            <field name="lot_output_id" ref="stock_location_output_Washington"/>
            <field name="company_id" ref="company_USA"/>
        </record>

    <!--
        Resource: sale.shop
    -->
        <record id="shop_Washington" model="sale.shop">
            <field name="company_id" ref="company_USA"/>
            <field name="warehouse_id" ref="warehouse0_Washington"/>
            <field name="payment_default_id" ref="account.account_payment_term"/>
            <!--field name="pricelist_id" ref="product.list0"/ -->
            <field name="name">US Washington St.</field>
        </record>

    </data>
</openerp>
